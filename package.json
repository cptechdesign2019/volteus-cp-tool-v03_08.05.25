{
  "name": "volteus-cp-tool-v03",
  "version": "1.0.0",
  "description": "Clearpoint AV Management Tool with Volteus Foundation",
  "main": "index.js",
  "scripts": {
    "test": "npx vitest run --no-watch --reporter=default",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev": "next dev --port 3008",
    "dev:alt-port": "next dev --port 3009",
    "dev:bg": "PORT=${PORT:-3008} nohup next dev --port $PORT > dev.log 2>&1 & echo \"Dev server running on http://localhost:$PORT\" && echo $! > .next_dev.pid",
    "dev:status": "test -f .next_dev.pid && ps -p $(cat .next_dev.pid) || echo 'No dev server running'",
    "dev:stop": "test -f .next_dev.pid && kill $(cat .next_dev.pid) && rm .next_dev.pid || echo 'No dev server running'",
    "dev:restart": "npm run dev:stop && npm run dev:bg",
    "build": "next build",
    "start": "next start",
    "test:supabase-connection": "node scripts/test-supabase.js",
    "check-env": "node scripts/check-env.js",
    "fix-turbopack": "node scripts/fix-turbopack.js",
    "start-day": "bash scripts/start-day.sh",
    "nuke": "bash scripts/nuke-and-restart.sh"
  },
  "keywords": [
    "clearpoint",
    "av-management",
    "volteus",
    "supabase"
  ],
  "author": "Clearpoint Technology + Design",
  "license": "ISC",
  "engines": {
    "node": ">=20.11.0 <21"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "tsc --noEmit"
    ]
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-vitest": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^9.0.18",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prop-types": "^15.8.1",
    "storybook": "^9.0.18",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.3",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.42.0",
    "@tanstack/react-query": "^5.66.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.535.0",
    "next": "^15.4.2",
    "papaparse": "^5.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "tailwind-merge": "^3.3.1"
  }
}
